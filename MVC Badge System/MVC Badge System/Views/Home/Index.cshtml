@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <link rel="stylesheet" href="~/Content/SearchBarStyle.css">
</head>
<body>
    <!--Search bar to appear on nearly every page-->
    <input type="search" id="txtSearch" list="user_list" placeholder="Search..."/>
    <div id="results">
        <!--Holds the dropdown generated by SearchResult.cshtml-->
    </div>
</body>


@section scriptsIncludes
{
    <script src="~/content/SearchModule.js?Build=@Guid.NewGuid().ToString()"></script>
}

@section inlineScript
{
    <script type="text/javascript">
        $(document).ready(function () {
            window.SearchModule.init();
        });
    </script>
}